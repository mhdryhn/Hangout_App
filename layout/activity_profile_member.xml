<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_organizer">

    <com.example.fyp.CircularImageView
        android:id="@+id/profile_pic"
        android:layout_gravity="start"
        android:layout_height="150dp"
        android:layout_marginEnd="99dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="80dp"
        android:layout_width="150dp"
        android:background="@drawable/round_button"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/changepp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_pic"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/white"
        android:text="Set Member's Profile Picture"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/gold"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/member_name1"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/changepp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="3dp"
        android:background="#23FFB703"
        android:fontFamily="@font/poppins_regular"
        android:text="Member's Name :"
        android:textColor="@color/gold"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingStart="3dp"
        />

    <TextView
    android:id="@+id/member_name"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/changepp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="3dp"
    android:fontFamily="@font/poppins_regular"
    android:text=""
    android:textColor="@color/gold"
    android:paddingBottom="5dp" android:paddingEnd="5dp"
    android:paddingTop="5dp"
    android:paddingStart="3dp" android:textAlignment="textEnd"
    />

    <TextView
        android:id="@+id/member_age1"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/member_name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="3dp"
        android:background="#23FFB703"
        android:fontFamily="@font/poppins_regular"
        android:text="Age"
        android:textColor="@color/gold"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingStart="3dp"
        />

    <TextView
        android:id="@+id/member_age"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/member_name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="3dp"
        android:background="#23FFB703"
        android:fontFamily="@font/poppins_regular"
        android:text=""
        android:textColor="@color/gold"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingStart="3dp"
        android:textAlignment="textEnd"
        />

    <TextView
        android:id="@+id/member_gender1"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/member_age"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="3dp"
        android:background="#23FFB703"
        android:fontFamily="@font/poppins_regular"
        android:text="Gender: "
        android:textColor="@color/gold"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingStart="3dp"
        />

    <TextView
        android:id="@+id/member_gender"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/member_age"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="3dp"
        android:background="#23FFB703"
        android:fontFamily="@font/poppins_regular"
        android:text=""
        android:textColor="@color/gold"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingStart="3dp"
        android:textAlignment="textEnd"
        />

    <TextView
        android:id="@+id/member_email1"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/member_gender"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="3dp"
        android:background="#23FFB703"
        android:fontFamily="@font/poppins_regular"
        android:text="Email:"
        android:textColor="@color/gold"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingStart="3dp"
        />

    <TextView
        android:id="@+id/member_email"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/member_gender"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="3dp"
        android:background="#23FFB703"
        android:fontFamily="@font/poppins_regular"
        android:text=""
        android:paddingEnd="5dp"
        android:textColor="@color/gold"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingStart="3dp"
        android:textAlignment="textEnd"
        />

    <TextView
        android:id="@+id/member_number1"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/member_email"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="3dp"
        android:background="#23FFB703"
        android:fontFamily="@font/poppins_regular"
        android:text="Number: "
        android:textColor="@color/gold"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingStart="3dp"
        />

    <TextView
        android:id="@+id/member_number"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/member_email"
        android:layout_marginStart="20dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="3dp"
        android:background="#23FFB703"
        android:fontFamily="@font/poppins_regular"
        android:paddingStart="3dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="5dp"
        android:text="Hello"
        android:textAlignment="textEnd"
        android:textColor="@color/gold" />

    <androidx.appcompat.widget.AppCompatButton
        android:ellipsize="end" android:gravity="center"
        android:id="@+id/Save_Info"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_width="match_parent"
        android:paddingBottom="9dp"
        android:layout_below="@id/member_number"
        android:paddingEnd="20dp"
        android:paddingStart="30dp"
        android:paddingTop="9dp"
        android:singleLine="true"
        android:text="Save Changes"
        android:textAllCaps="false"
        android:background="@drawable/my_button_bg"
        android:backgroundTint="@color/white"
        android:textColor="@color/gold"
        android:fontFamily="@font/poppins_regular"
        android:textSize="24dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:ellipsize="end" android:gravity="center"
        android:id="@+id/btnLogout"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_width="match_parent"
        android:paddingBottom="9dp"
        android:layout_below="@id/Save_Info"
        android:paddingEnd="20dp"
        android:paddingStart="30dp"
        android:paddingTop="9dp"
        android:singleLine="true"
        android:text="Logout"
        android:textAllCaps="false"
        android:background="@drawable/my_button_bg"
        android:backgroundTint="@color/gold"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular"
        android:textSize="24dp"
        />

</RelativeLayout>