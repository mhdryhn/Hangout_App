<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg3">



    <TextView
        android:id="@+id/txtDescription"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:text="Welcome Back to HngOut! Log in and get back to creating events!"
        android:fontFamily="@font/poppins_regular"
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/Email"
        android:layout_below="@+id/txtDescription"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:text="Email"
        android:textSize="20dp"
        android:fontFamily="@font/poppins_regular"
        />

    <EditText
        android:id="@+id/Email_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Email"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:hint="Type your email here"
        android:textSize="17dp"
        android:textColorHint="@color/black"
        android:singleLine="true"
        android:padding="20dp" />

    <TextView
        android:id="@+id/Password"
        android:layout_below="@+id/Email_info"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:text="Password"
        android:textSize="20dp"
        android:fontFamily="@font/poppins_regular"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:layout_below="@id/Password"
        android:id="@+id/Password_layout2"
        >

        <EditText
            android:id="@+id/Password_info"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:hint="Type your password here"
            android:background="@color/white"
            android:inputType="textPassword"
            android:singleLine="true"
            android:padding="20dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:ellipsize="end" android:gravity="center"
        android:id="@+id/btnLogin"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_width="match_parent"
        android:paddingBottom="9dp"
        android:layout_below="@id/Password_layout2"
        android:paddingEnd="18dp"
        android:paddingStart="30dp"
        android:paddingTop="9dp"
        android:singleLine="true"
        android:text="Login"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:background="@drawable/my_button_bg"
        android:backgroundTint="@color/orange"
        android:fontFamily="@font/poppins_regular"
        android:textAllCaps="false"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/notauser"
        android:text="Not a User? Click here to Register"
        android:layout_below="@id/btnLogin"
        android:textSize="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

</RelativeLayout>