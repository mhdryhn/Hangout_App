<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".memberevents_fragment"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/pacifico_regular"
                android:text="Upcoming Events"
                android:textColor="@color/gold"

                android:textSize="36dp" />

            <TextView
                android:id="@+id/layover1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up for some Events, what are you waiting for!"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="70dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="20dp"
                android:layout_above="@id/label2"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/MemberMyEvent_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/pacifico_regular"
                android:text="Past Events"
                android:textColor="@color/gold"
                android:layout_below="@id/MemberMyEvent_RecyclerView"
                android:textSize="36dp"
                />

            <TextView
                android:id="@+id/layover2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You have not participated in any events"
                android:layout_below="@+id/label2"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="80dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/MemberMyEventPast_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label2"
                />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>