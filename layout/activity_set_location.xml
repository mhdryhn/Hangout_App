<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Set_Location"
    android:id="@+id/RootLayout">



    <TextView android:ellipsize="end"
        android:id="@+id/txtHngOut"
        android:layout_gravity="end"
        android:layout_height="wrap_content"
        android:layout_marginEnd="77dp"
        android:layout_marginStart="77dp"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:text="HngOut"
        android:textSize="36dp"
        android:fontFamily="@font/pacifico_regular"
        android:textColor="@color/gold"
        android:layout_centerHorizontal="true"
        />


    <TextView android:ellipsize="end"
        android:id="@+id/txtSetLocation"
        android:layout_gravity="end"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="1dp"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:text="Set Location"
        android:layout_below="@+id/txtHngOut"
        android:fontFamily="@font/pacifico_regular"
        android:textSize="24dp"
        android:textColor="@color/gold"
        android:layout_centerHorizontal="true"
        />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/map"
        android:layout_below="@id/txtSetLocation"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:layout_below="@id/map"
        android:layout_centerHorizontal="true"
        android:text=""
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:ellipsize="end" android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/btncurrentLocation"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_width="200dp"
        android:paddingBottom="9dp"
        android:layout_below="@id/locationText"
        android:paddingEnd="2dp"
        android:paddingStart="2dp"
        android:paddingTop="9dp"
        android:singleLine="true"
        android:text="Use my current location"
        android:textSize="12dp"
        android:textColor="@color/orange"
        android:background="@drawable/my_button_bg"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins_regular"
        android:textAllCaps="false"
        />


    <TextView
        android:id="@+id/ortext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btncurrentLocation"
        android:text="OR"
        android:layout_centerHorizontal="true"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:ellipsize="end" android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnSearchLocation"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_width="200dp"
        android:paddingBottom="9dp"
        android:layout_below="@id/ortext"
        android:paddingEnd="2dp"
        android:paddingStart="2dp"
        android:paddingTop="9dp"
        android:singleLine="true"
        android:text="Manually Type in Location"
        android:textSize="12dp"
        android:textColor="@color/orange"
        android:background="@drawable/my_button_bg"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins_regular"
        android:textAllCaps="false"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:ellipsize="end" android:gravity="center"
        android:id="@+id/createacct"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_width="match_parent"
        android:paddingBottom="9dp"
        android:layout_below="@id/btnSearchLocation"
        android:paddingEnd="18dp"
        android:paddingStart="30dp"
        android:paddingTop="9dp"
        android:singleLine="true"
        android:text="Create Account"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:background="@drawable/my_button_bg"
        android:backgroundTint="@color/orange"
        android:fontFamily="@font/poppins_regular"
        android:textAllCaps="false"
        />

</RelativeLayout>



