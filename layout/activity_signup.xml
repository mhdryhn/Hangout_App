<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3">

    <TextView
        android:id="@+id/txtHeyWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:ellipsize="end"
        android:fontFamily="@font/opensanssemibold"
        android:gravity="start"
        android:singleLine="true"
        android:text="Hey Welcome!"
        android:textColor="@color/black"
        android:textSize="40dp" />

    <TextView android:gravity="start"
        android:id="@+id/txtYoucanregister"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtHeyWelcome"
        android:layout_marginEnd="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:text="You can register as a member or an organizer"
        android:textSize="20dp"
        android:fontFamily="@font/poppins_regular"
        />

    <TextView android:ellipsize="end" android:id="@+id/txtSignupas"
        android:layout_gravity="start"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtYoucanregister"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:text="Sign up as"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/opensanssemibold"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:ellipsize="end" android:gravity="center"
        android:id="@+id/btnMember"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSignupas"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:paddingBottom="8dp"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:paddingTop="8dp" android:singleLine="true"
        android:text="Member"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:background="@drawable/my_button_bg"
        android:backgroundTint="@color/orange"
        android:fontFamily="@font/poppins_regular"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/Or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnMember"
        android:gravity="center"
        android:singleLine="true"
        android:text="or"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:textSize="24dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:ellipsize="end" android:gravity="center"
        android:id="@+id/btnOrganizer"
        android:layout_height="wrap_content"
        android:layout_below="@id/Or"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"
        android:layout_width="match_parent"
        android:paddingBottom="8dp"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:paddingTop="8dp" android:singleLine="true"
        android:text="Organizer"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:background="@drawable/my_button_bg"
        android:backgroundTint="@color/orange"
        android:fontFamily="@font/poppins_regular"
        android:textAllCaps="false" />
</RelativeLayout>